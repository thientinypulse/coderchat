<%= render partial: 'header_bar' %>

<%= form_for(@message) do |f| %>

    <div class="form-group">
      Send to:<br>
      <% my_friend_names = @my_friends.map { |user| [user.name, user.id] } %>
      <%=f.select :recipient_id, options_for_select(my_friend_names) %>
    </div>

    <div class="form-group">
      Title:<br>
      <%= f.text_field :title, class: 'form-control', placeholder: 'Please insert the title of the email' %>
    </div>
    <div class="form-group">
      Content:<br>
      <%= f.text_area :content, class: 'form-control', placeholder: 'Content...'  %>
    </div>

    <div class="form-group">
      <%= f.submit 'Send', class: 'btn btn-block btn-info' %>
    </div>
<% end %>
