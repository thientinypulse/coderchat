<div class="signup-form">
  <%= form_for @user, :url => users_updateprofile_path do |f| %>
      <div class="form-group">
        <%= f.text_field 'email', class: 'form-control', placeholder: 'Your E-mail' %>
      </div>
      <div class="form-group">
        <%= f.text_field 'name', class: 'form-control', placeholder: 'Name' %>
      </div>

      <div class="form-group">
        <%= f.text_field 'image_url', class: 'form-control', placeholder: 'Image' %>
      </div>

      <div class="form-group">
        <%= f.submit 'Update', class: 'btn btn-block btn-info' %>
      </div>

      <%= image_tag(@user.image_url, height: '300', width: '300') %>
  <% end %>
</div>